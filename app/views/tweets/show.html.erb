<h1>ツイート詳細</h1>

<% if flash[:notice] %>
  <div class="flash-notice"><%= flash[:notice] %></div>
<% end %>

<div class="tweet-detail">
  <p><%= @tweet.content %></p>
</div>

<%= link_to "ホームに戻る", tweets_path, class: "btn btn-secondary" %>
<%= link_to "編集する", edit_tweet_path(@tweet), class: "btn btn-primary" %>
<%= link_to "削除", tweet_path(@tweet),
            method: :delete,
            data: { confirm: "よろしいですか？" },
            class: "btn btn-danger" %>
